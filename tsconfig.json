{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "./src/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}