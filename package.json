{
  "name": "saviour",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "migrate": "sequelize-cli db:migrate",
    "testEnvMigrate": "rm db.sqlite && yarn migrate && yarn sequelize-cli db:seed:all",
    "shell": "ts-node -T -r tsconfig-paths/register -r ./src/shell.ts",
    "pretest": "touch db.test.sqlite && rm db.test.sqlite && yarn migrate",
    "test": "jest --watch",
    "coverage": "jest --coverage",
    "dev": "nodemon -q --watch src --ignore 'src/**/*.spec.ts' --exec 'ts-node -r tsconfig-paths/register' src/server.ts | pino-pretty",
    "prod": "pm2 ecosystem.config.js app"
  },
  "dependencies": {
    "argon2": "^0.26.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "date-fns": "^2.12.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-pino-logger": "^4.0.0",
    "express-ws": "^4.0.0",
    "faker": "^4.1.0",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "multer": "^1.4.2",
    "nanoid": "^2.1.8",
    "pg": "^7.15.1",
    "pg-hstore": "^2.3.3",
    "pino": "^5.15.0",
    "pm2": "^4.2.1",
    "pug": "^2.0.4",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.3",
    "sequelize-cli": "^5.5.1",
    "sequelize-typescript": "^1.1.0",
    "ts-node": "^8.5.4",
    "tsconfig-paths": "^3.9.0",
    "ua-parser-js": "^0.7.21",
    "yup": "^0.28.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.29",
    "@types/body-parser": "^1.17.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/date-fns": "^2.6.0",
    "@types/express": "^4.17.2",
    "@types/express-pino-logger": "^4.0.2",
    "@types/express-ws": "^3.0.0",
    "@types/faker": "^4.1.9",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^24.0.24",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/lodash": "^4.14.149",
    "@types/multer": "^1.3.10",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^12.12.21",
    "@types/pino": "^5.15.0",
    "@types/pug": "^2.0.4",
    "@types/supertest": "^2.0.8",
    "@types/ua-parser-js": "^0.7.33",
    "@types/validator": "^12.0.1",
    "@types/yup": "^0.26.27",
    "@typescript-eslint/parser": "^2.12.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "pino-pretty": "^3.5.0",
    "prettier": "^1.19.1",
    "sqlite3": "^4.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "tslib": "^1.10.0",
    "typescript": "^3.7.4"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "warn",
      "no-console": 0,
      "no-unused-vars": 0
    }
  },
  "eslintIgnore": [
    "build/",
    "node_modules/",
    "**/*.spec.ts"
  ],
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "setupFiles": [
      "dotenv/config"
    ]
  }
}